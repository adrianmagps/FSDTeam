<!DOCTYPE html>
<html class="no-js">
<head>
  <title>FSDTeam</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">

  <!-- ==============================================
  Favicons
  =============================================== -->
  <!--<link rel="shortcut icon" href="assets/favicon.ico">-->
  <!--<link rel="apple-touch-icon" href="assets/apple-touch-icon.png">-->
  <!--<link rel="apple-touch-icon" sizes="72x72" href="assets/apple-touch-icon-72x72.png">-->
  <!--<link rel="apple-touch-icon" sizes="114x114" href="assets/apple-touch-icon-114x114.png">-->

  <!-- ==============================================
  CSS
  =============================================== -->
  <%= stylesheet_link_tag 'application' %>

  <!-- ==============================================
  JavaScripts
  =============================================== -->
  <%= javascript_include_tag 'modernizr.min' %>

  <%= csrf_meta_tags %>

</head>
<body data-spy="scroll" data-target="#main-nav" data-offset="400">

  <!--=== PAGE PRELOADER ===-->
  <div id="page-loader"><span class="page-loader-gif">Loading...</span></div>

  <% if content_for?(:header) %>
    <%= yield :header %>
  <% end %>

  <!-- ==============================================
  MAIN NAV
  =============================================== -->

  <div id="main-nav" class="navbar">
    <div class="container">

      <div class="navbar-header">

        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#site-nav">
          <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
        </button>

        <!-- ======= LOGO ========-->
        <%= link_to root_path+'#home', :class => 'navbar-brand scrollto' do %>
            <img class="site-logo" src="http://placehold.it/90x40?text=LOGO+90x40" alt="LOGO 90x40" />
        <% end %>
      </div>

      <div id="site-nav" class="navbar-collapse collapse">
        <ul class="nav navbar-nav navbar-right">
          <li class="sr-only">
            <%= link_to 'Home', root_path, { class: 'scrollto'} %>
          </li>
          <li>
            <%= link_to 'About', root_path+'#about', { class: 'scrollto'} %>
          </li>
          <li>
            <%= link_to 'Services', root_path+'#services', { class: 'scrollto'} %>
          </li>
          <li>
            <%= link_to 'Portfolio', root_path+'#portfolio', { class: 'scrollto'} %>
          </li>
          <li>
            <%= link_to 'Team', root_path+'#team', { class: 'scrollto'} %>
          </li>
          <li>
            <%= link_to 'Blog', root_path+'#news', { class: 'scrollto'} %>
          </li>
          <li>
            <%= link_to 'Contact', root_path+'#contact', { class: 'scrollto'} %>
          </li>
          <% if user_signed_in? %>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Wellcome <%= current_user.name %>!!! <i class="fa fa-user"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
                  <li><%= link_to root_path do %><i class="fa fa-cog"></i> Administrar<% end %></li>
                </ul>
              </li>
          <% else %>
              <li><%= link_to sign_in_url do %><i class="fa fa-user"></i><% end %></li>
          <% end %>
        </ul>
      </div><!--End navbar-collapse -->

    </div><!--End container -->

  </div><!--End main-nav -->

  <%= yield %>

  <!-- ==============================================
  FOOTER
  =============================================== -->
  <footer id="main-footer">

    <div class="container text-center">

      <img class="img-responsive img-center footer-logo" src="http://placehold.it/140x70?text=LOGO+140x70" alt="LOGO 140x70" />

      <ul class="social-links">
        <li><a href="#link"><i class="fa fa-twitter fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-facebook fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-google-plus fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-dribbble fa-fw"></i></a></li>
        <li><a href="#link"><i class="fa fa-linkedin fa-fw"></i></a></li>
      </ul>
      <p>&copy;2016 FSD Theme by <a href="#" target="_blank">FSD Team</a></p>

    </div>

  </footer>

  <!-- ==============================================
  SCRIPTS
  =============================================== -->
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
  <script>

    var mapPoint = {
      'lat': 40.720099,
      'lng': -74.005764,
      'zoom' : 15,
      'infoText':'<p>250 W Broadway\
                  <br/>New York\
                  <br/>NY 10013</p>',
      'linkText':'View on Google Maps',
      'mapAddress':'250 W Broadway, New York, NY 10013',
      'icon': 'assets/marker.png'
    };

  </script>

  <% if content_for?(:scripts) %>
    <%= yield :scripts %>
  <% end %>
</body>
</html>
