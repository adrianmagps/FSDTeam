<% content_for :header do %>
  <!-- ==============================================
  HEADER
  =============================================== -->
    <header id="inner-page-header" class="parallax-bg" data-parallax-background="assets/blog/blog-header-3.jpg" data-stellar-background-ratio=".3">

      <div class="header-content">

        <h1 class="bordered-text">We <span class="primary">Love</span> Writing</h1>

      </div>

    </header><!--End header -->
<% end %>

<!-- ==============================================
BLOG LIST
=============================================== -->
<section class="white-bg padding-top-bottom">

  <div class="container">

    <div class="row">

      <div id="blog-list" class="col-sm-8">

        <% @posts.each do |p| %>
            <article class="post-entry">

              <header class="post-header">

                <h2 class="post-title">
                  <%= link_to post_details_path(p), :html => { title: p.title } do %>
                    <%= p.title %>
                  <% end %>
                </h2>

                <ul class="post-meta small">
                  <li><i class="fa fa-calendar"></i><a href="#"><%= p.created_at.to_date.to_formatted_s :long %></a></li>
                  <li><i class="fa fa-comments-o"></i><a href="#"><%= p.comments.count %> Comment(s)</a></li>
                  <li><i class="fa fa-folder-open-o"></i>
                    <%= link_to p.category.name, posts_category_path(:id => p.category.id) %>
                  </li>
                </ul>

                <%= link_to post_details_path(p), :class => 'post-thumb', :html => { title: p.title } do %>
                    <img class="img-responsive" src="http://placehold.it/945x540" alt="" />
                <% end %>
              </header>

              <p>
                <%= p.summary.html_safe %>
              </p>

              <%= link_to 'Continue Reading', post_details_path(p), :class => 'post-link', :html => { title: p.title } %>

            </article>
        <% end %>

        <!-- Pagination -->

        <nav class="text-center">
          <ul class="pagination">
            <li><a href="#"><span aria-hidden="true"><i class="fa fa-caret-left"></i></span><span class="sr-only">Previous</span></a></li>
            <li class="active"><a href="#">1</a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#"><span aria-hidden="true"><i class="fa fa-caret-right"></i></span><span class="sr-only">Next</span></a></li>
          </ul>
        </nav>

      </div>

      <%= render :partial => 'sidebarPartial' %>

    </div>

  </div>

</section>
