<section class="white-bg padding-top-bottom">
  <h1 class="section-title">Categorias</h1>
  <div class="container">
    <div class="row">
      <a id="createCategory" class="btn btn-primary" style="margin-bottom: 10px;"><i class="fa fa-plus"></i> Nueva</a>
      <%= form_for(@category, :remote => true, html: {role: 'form', class: 'form-horizontal'}) do |f| %>
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          <div class="form-group">
            <div class="col-sm-10 col-xs-8">
              <%= f.text_field :name, {class: 'form-control', placeholder: 'Name'} %>
            </div>
            <div class="col-sm-2 col-xs-1">
              <%= f.submit 'Create', class: 'btn btn-default' %>
            </div>
          </div>
      <% end %>
      <hr />
      <table id="categories" class="table table-responsive table-hover">
        <thead>
          <th>Id</th>
          <th>Name</th>
          <th>Posts</th>
          <th></th>
        </thead>
        <tbody>
          <%= render :partial => @categories.order(name: :asc) %>
        </tbody>
      </table>
    </div>
  </div>
</section>

<% content_for :scripts do %>
    <script type="application/javascript">
      $('#new_category').hide();

      $(document).ready(function(){
        $('#createCategory').click(function (e) {
          e.preventDefault();
          $('#new_category').toggle();
        })
      })
    </script>
<% end %>



